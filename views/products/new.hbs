{{! New Product Form }}
<h1>Add New Product</h1>
{{#if error}}
  <div class="error">{{error}}</div>
{{/if}}
<form method="POST">
  <label for="name">Name:</label>
  <input type="text" id="name" name="name" value="{{formData.name}}" required><br>

  <label for="cost">Cost:</label>
  <input type="number" id="cost" name="cost" step="0.01" value="{{formData.cost}}" required><br>

  <label for="description">Description:</label>
  <textarea id="description" name="description">{{formData.description}}</textarea><br>

  <button type="submit">Create Product</button>
</form>
<a href="/products">Back to Products</a>
